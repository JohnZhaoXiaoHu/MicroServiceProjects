<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:tb="clr-namespace:WpfApp.Views.Templates.TextBoxs">
    <Style TargetType="{x:Type tb:CustomTextBox}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type tb:CustomTextBox}">
                    <Border Background="{TemplateBinding Background}" CornerRadius="{TemplateBinding TextBoxRadius}" BorderThickness="0" BorderBrush="LightGray">
                        <ScrollViewer x:Name="PART_ContentHost"></ScrollViewer>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>